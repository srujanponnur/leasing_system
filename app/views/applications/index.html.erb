<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table>
  <thead>
    <tr>
      <th>Property Id</th>
      <th>Applicant Id</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.property_id %>
        <td><%= application.applicant_id %>
        <td><%= application.status %></td>
        <td><%= link_to 'Show', application %></td>
        <% if @withdraw && application.status != "withdrawn" %>
          <td><%= link_to 'Withdraw', withdraw_application_path(application), method: :post %>
        <% end %>
        <% if @accept %>
          <td><%= link_to 'Accept',accept_application_path(application), method: :post %></td>
          <td><%= link_to 'Reject',reject_application_path(application), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', root_path %>
